doctype html

block mixins
  include mixins/mixins.pug

block vars

html(lang=lang)
  head
    meta(charset='utf-8')
    title #{title}
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1, minimum-scale=1')
    meta(name='msapplication-TileColor', content='#ffffff')
    meta(name='msapplication-TileImage', content='images/favicons/mstile-144x144.png')
    meta(name='msapplication-config', content='images/favicons/browserconfig.xml')
    meta(name='theme-color', content='#ffffff')
    link(rel='mask-icon', href='images/favicons/safari-pinned-tab.svg', color='#000000')
    link(rel='apple-touch-icon', sizes='180x180', href='images/favicons/apple-touch-icon.png')
    link(rel='icon', type='image/png', sizes='32x32', href='images/favicons/favicon-32x32.png')
    link(rel='icon', type='image/png', sizes='16x16', href='images/favicons/favicon-16x16.png')
    link(rel='manifest', href='images/favicons/site.webmanifest')
    link(rel='shortcut icon', href='images/favicons/favicon.ico')

    block styles
      link(rel='stylesheet', priority='critical', href='../src/styles/critical.css')
      link(rel='stylesheet', priority='async', href='styles/fonts.css')
      link(rel='stylesheet', priority='async', href='styles/style.css')


  body(class=bodyClass)
    block header

    block main

    block footer

    block scripts
      script(async, src='scripts/bundle.js')

